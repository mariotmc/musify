<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center py-4 sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-sm sm:p-6">
        <h1 class="text-base text-center font-semibold leading-6 text-gray-900" id="modal-title">Create Player</h1>

        <%= form_with model: @player, class: "mt-3 sm:mt-5" do |f| %>
          <%= f.hidden_field :lobby_id, value: @lobby.id %>

          <div class="mb-4">
            <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <%= f.text_field :name, class: "block mt-1 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: "Pick a name", autofocus: true %>
          </div>

          <div data-controller="avatar-selection" class="mb-4">
            <%= f.file_field :avatar, accept: 'image/*', class: 'hidden', data: { avatar_selection_target: "input" } %>

            <span class="block text-sm font-medium text-gray-700">Avatar</span>

            <div class="mt-2 flex justify-center flex-wrap gap-2">
              <% Player::AVATARS.each_with_index do |avatar, index| %>
                <div data-avatar-selection-target="option" data-action="click->avatar-selection#select" data-avatar="<%= avatar %>" class="avatar-option cursor-pointer rounded-full" style="background-color: <%= Player::AVATAR_BACKGROUND_COLORS[index] %>">
                  <%= image_tag "avatars/#{avatar}.png", class: "w-12 h-12 rounded-full" %>
                </div>
              <% end %>
            </div>
          </div>


          <div class="mb-4">
            <%= f.label :color, "Colour", class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2 flex justify-center flex-wrap gap-2.5">
              <% Player::COLORS.each do |color| %>
                <label class="cursor-pointer">
                  <%= f.radio_button :color, color, class: "hidden peer" %>
                  <div class="w-8 h-8 rounded-full border-2 border-transparent peer-checked:border-black bg-<%= color %>-400"></div>
                </label>
              <% end %>
            </div>
          </div>

          <div class="mt-5 sm:mt-6">
            <button type="submit" class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
              Join Lobby
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
