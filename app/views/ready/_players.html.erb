<%= turbo_frame_tag "ready_players", class: "flex justify-center gap-10" do %>
	<% players.each do |player| %>
		<%= turbo_frame_tag "#{dom_id(player)}_ready", class: "w-20 text-center" do %>
			<%= image_tag player.avatar.url, loading: "lazy", class: "w-12 h-12 mx-auto rounded-full", style: "background-color: #{player.avatar_bg_color};" %>

			<p class="text-<%= player.color %>-500 font-medium"><%= player.name %></p>

			<%= render partial: "ready/player_button", locals: { player: player } %>
		<% end %>
	<% end %>
<% end %>
